<% layout('/layout/boilerplate') -%>


<body>
    
    <h3>U can Update ur Listings...</h3>


    <form action="/listing/<%= listing._id %>?_method=put" method="post" class = "needs-validation" novalidate enctype="multipart/form-data">
    
        <h5>Title:</h5>
        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required placeholder=""> 
        <div class="invalid-feedback">
            Please choose a username.
          </div>

        <br> <br>




        <h5>Description:</h5>
        <textarea name="listing[description]" class="form-control" required  id="" cols="50" rows="10"><%= listing.description %></textarea> 
   
        
        <br> <br>



        <h5>Original Image:</h5>
          <img src="<%= originalImageUrl %>" alt="">



          <br> <br>

        <h5>Upload New Image:</h5>
        <input type="file" name="listing[image]" class="form-control"  > 
        <div class="invalid-feedback">
            Please choose a Image.
        </div>
        


        <br> <br>

        <h5>Price:</h5>
        <input type="number" name="listing[price]" required class="form-control" value="<%= listing.price %>">
        <div class="invalid-feedback">
            Please choose a Price.
          </div>
        
        <br> <br>

        <h5>Location:</h5>
        <input type="text" name="listing[location]" required class="form-control" value="<%= listing.location %>">
        
        <div class="invalid-feedback">
            Please choose a Location.
          </div>
        
        <br> <br>

        <h5>Country:</h5>
        <input type="text" name="listing[country]" required class="form-control" value="<%= listing.country %>">
        <div class="invalid-feedback">
            Please choose a Country.
          </div>
        
        <br> <br>


        <button class="btn-danger">Edit</button>
    
    </form>

</body>
