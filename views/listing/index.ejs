        <div id="side">
            <% for(let list of allListing){ %>

                <a href="/listing/<%= list._id %>">

                    <div id="row">

                        <div class="card">
                            <div id="color"></div>

                            
                            <div class="image">

                                <img src="<%= list.image.url %>" alt="">
                            </div>

                        </div>
                
                        <b> <p> <%=  list.title %>  <br>
                
                            &#8377;  <%= list.price.toLocaleString("en-IN") %> /night
                            <span class="index">+ 18% GST </span>
                        </p> </b>
            
                    </div>

                </a>
            <% } %>

        </div>



    <script>

        let taxSwitch = document.querySelector(".form-check-reverse")

        taxSwitch.addEventListener("click", ()=>{
            let index = document.getElementsByClassName("index")

            for(let info of index){


                if(info.style.display !="inline"){
                    info.style.display= "inline"
                }
                else{
                    info.style.display= "none"
                }
            }
            
        })


    </script>


